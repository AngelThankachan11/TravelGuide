<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/layRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:layout_marginHorizontal="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_3"
            app:cardBackgroundColor="@color/app_color"
            app:cardCornerRadius="@dimen/dp_15">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgProperty"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:padding="@dimen/dp_10"
                    android:layout_marginStart="@dimen/dp_5"
                    app:srcCompat="@drawable/ic_boys_hostel"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/txtProperty"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:text="@string/boys_hostel"
                    android:textSize="@dimen/dp_14"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/white"
                    android:paddingBottom="@dimen/dp_5"
                    android:gravity="left"
                    android:maxLines="1"
                    android:layout_marginEnd="@dimen/dp_5"
                    app:layout_constraintStart_toEndOf="@+id/imgProperty"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/imgProperty"
                    app:layout_constraintBottom_toBottomOf="@+id/imgProperty"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>