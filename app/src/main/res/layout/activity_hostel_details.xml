<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/consRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grayish1"
        android:clickable="true">

        <androidx.core.widget.NestedScrollView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/consPrice">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dp_10">

                    <ImageView
                        android:id="@+id/imgProperty"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:scaleType="centerCrop"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/guideline"/>

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.45"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardRoomDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/dp_5"
                        app:cardElevation="@dimen/dp_2"
                        app:cardBackgroundColor="@color/black"
                        android:layout_marginStart="@dimen/dp_10"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/guideline"
                        app:layout_constraintBottom_toBottomOf="@+id/guideline">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/consRoomDetails"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/dp_2"
                            android:paddingHorizontal="@dimen/dp_15"
                            android:onClick="onClick">

                            <ImageView
                                android:id="@+id/imgRoomDetails"
                                android:layout_width="@dimen/dp_35"
                                android:layout_height="@dimen/dp_35"
                                android:src="@drawable/ic_room_details"
                                android:padding="@dimen/dp_6"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:tint="@color/white" />

                            <TextView
                                android:id="@+id/txtCheckRoom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/check"
                                android:textColor="@color/green"
                                android:textSize="@dimen/sp_16"
                                android:fontFamily="@font/roboto_bold"
                                android:paddingTop="@dimen/dp_2"
                                android:paddingHorizontal="@dimen/dp_15"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                app:layout_constraintStart_toEndOf="@id/imgRoomDetails"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/txtRoomDetails"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/room_details"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_12"
                                android:fontFamily="@font/roboto_bold"
                                android:paddingBottom="@dimen/dp_2"
                                android:paddingHorizontal="@dimen/dp_10"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                app:layout_constraintStart_toEndOf="@id/imgRoomDetails"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/txtCheckRoom" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardMessDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/dp_5"
                        app:cardElevation="@dimen/dp_2"
                        app:cardBackgroundColor="@color/black"
                        android:layout_marginEnd="@dimen/dp_10"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/guideline"
                        app:layout_constraintBottom_toBottomOf="@+id/guideline">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/consMessDetails"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="@dimen/dp_2"
                            android:paddingHorizontal="@dimen/dp_15"
                            android:onClick="onClick">

                            <ImageView
                                android:id="@+id/imgMessDetails"
                                android:layout_width="@dimen/dp_35"
                                android:layout_height="@dimen/dp_35"
                                android:src="@drawable/ic_mess_details"
                                android:padding="@dimen/dp_6"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:tint="@color/white" />

                            <TextView
                                android:id="@+id/txtCheckMess"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/check"
                                android:textColor="@color/green"
                                android:textSize="@dimen/sp_16"
                                android:fontFamily="@font/roboto_bold"
                                android:paddingTop="@dimen/dp_2"
                                android:paddingHorizontal="@dimen/dp_15"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                app:layout_constraintStart_toEndOf="@+id/imgMessDetails"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/txtMessDetails"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mess_facility"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_12"
                                android:fontFamily="@font/roboto_bold"
                                android:paddingBottom="@dimen/dp_2"
                                android:paddingHorizontal="@dimen/dp_10"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                app:layout_constraintStart_toEndOf="@+id/imgMessDetails"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/txtCheckMess" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardHostelInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/dp_5"
                        app:cardElevation="@dimen/dp_3"
                        app:cardBackgroundColor="@color/white"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginHorizontal="@dimen/dp_10"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cardRoomDetails">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="@dimen/dp_10"
                            android:paddingTop="@dimen/dp_5"
                            android:paddingBottom="@dimen/dp_20">

                            <TextView
                                android:id="@+id/txtPropertyName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_22"
                                android:textColor="@color/app_color"
                                android:fontFamily="@font/roboto_bold"
                                android:paddingEnd="@dimen/dp_5"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>

                            <TextView
                                android:id="@+id/txtPropertyAddress"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_14"
                                android:textColor="@color/gray_2"
                                android:fontFamily="@font/roboto_medium"
                                android:maxLines="3"
                                android:paddingEnd="@dimen/dp_20"
                                android:lineSpacingExtra="@dimen/dp_3"
                                android:layout_marginEnd="@dimen/dp_10"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/imgLocation"
                                app:layout_constraintTop_toBottomOf="@+id/txtPropertyName"/>

                            <ImageView
                                android:id="@+id/imgLocation"
                                android:layout_width="@dimen/dp_50"
                                android:layout_height="@dimen/dp_50"
                                android:src="@drawable/ic_location"
                                android:onClick="onClick"
                                android:padding="@dimen/dp_15"
                                app:layout_constraintStart_toEndOf="@+id/txtPriceRange1"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/txtPriceRange1"
                                app:layout_constraintBottom_toBottomOf="@+id/txtRoomAvailable"/>

                            <TextView
                                android:id="@+id/txtPriceRange1"
                                android:layout_width="@dimen/dp_250"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_14"
                                android:textColor="@color/app_color"
                                android:fontFamily="@font/roboto_bold"
                                android:maxLines="1"
                                android:includeFontPadding="false"
                                android:paddingHorizontal="@dimen/dp_5"
                                android:paddingVertical="@dimen/dp_5"
                                android:layout_marginTop="@dimen/dp_10"
                                android:background="@drawable/rounded_corner5_app_bg"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/txtPropertyAddress"/>

                            <TextView
                                android:id="@+id/txtRoomAvailable"
                                android:layout_width="@dimen/dp_250"
                                android:layout_height="wrap_content"
                                android:text="@string/rooms_available"
                                android:textSize="@dimen/sp_14"
                                android:textColor="@color/green"
                                android:fontFamily="@font/roboto_medium"
                                android:maxLines="1"
                                android:includeFontPadding="false"
                                android:paddingHorizontal="@dimen/dp_5"
                                android:paddingVertical="@dimen/dp_5"
                                android:layout_marginTop="@dimen/dp_5"
                                android:background="@drawable/rounded_corner5_app_bg"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/txtPriceRange1"/>

                            <TextView
                                android:id="@+id/txtDescription"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_13"
                                android:textColor="@color/gray"
                                android:fontFamily="@font/roboto_bold"
                                android:maxLines="3"
                                android:layout_marginTop="@dimen/dp_10"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/txtRoomAvailable"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardAmenities"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/dp_5"
                        app:cardElevation="@dimen/dp_3"
                        app:cardBackgroundColor="@color/white"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginHorizontal="@dimen/dp_10"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cardHostelInfo">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/txtAmenities"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="@string/amenities"
                                android:textSize="@dimen/sp_14"
                                android:textColor="@color/black"
                                android:fontFamily="@font/roboto_bold"
                                android:layout_marginTop="@dimen/dp_10"
                                android:layout_marginStart="@dimen/dp_10"
                                android:includeFontPadding="false"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyCategories"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:overScrollMode="never"
                                android:background="@android:color/transparent"
                                android:layout_marginHorizontal="@dimen/dp_10"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/txtAmenities"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardReferAndEarn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        app:cardCornerRadius="@dimen/dp_5"
                        app:cardBackgroundColor="@color/white"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginHorizontal="@dimen/dp_10"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cardAmenities">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_50"
                                android:adjustViewBounds="true"
                                android:padding="@dimen/dp_10"
                                app:srcCompat="@drawable/ic_refer_mice"
                                android:layout_marginStart="@dimen/dp_10"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                            <TextView
                                android:id="@+id/txtReferEarn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/refer_and_earn"
                                android:textSize="@dimen/dp_16"
                                android:fontFamily="@font/roboto_regular"
                                android:textColor="@color/white"
                                android:paddingHorizontal="@dimen/dp_15"
                                android:paddingVertical="@dimen/dp_5"
                                android:gravity="center"
                                android:background="@drawable/rounded_corner20_bright_green"
                                android:layout_marginEnd="@dimen/dp_10"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_5"
                        android:background="@android:color/transparent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cardReferAndEarn"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/consPrice1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginTop="@dimen/dp_10"
                        android:visibility="gone"
                        android:layout_marginHorizontal="@dimen/dp_10"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cardReferAndEarn">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardElevation="@dimen/dp_5"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/dp_20"
                            android:layout_marginStart="@dimen/dp_10"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">

                            <TextView
                                android:id="@+id/txtPriceRange"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/demo_price_range"
                                android:textColor="@color/app_color"
                                android:textSize="@dimen/sp_14"
                                android:fontFamily="@font/roboto_bold"
                                android:maxLines="1"
                                android:layout_marginTop="@dimen/dp_5"
                                android:paddingVertical="@dimen/dp_8"
                                android:paddingHorizontal="@dimen/dp_15"
                                android:includeFontPadding="false"
                                app:layout_constraintStart_toEndOf="@+id/cardImage"
                                app:layout_constraintTop_toBottomOf="@+id/consHostelName" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardBookOnline1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardElevation="@dimen/dp_5"
                            app:cardBackgroundColor="@color/red"
                            app:cardCornerRadius="@dimen/dp_10"
                            android:layout_marginEnd="@dimen/dp_10"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">

                            <TextView
                                android:id="@+id/txtBookOnline1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/book_online"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_14"
                                android:fontFamily="@font/roboto_bold"
                                android:maxLines="1"
                                android:paddingVertical="@dimen/dp_8"
                                android:paddingHorizontal="@dimen/dp_15"
                                android:includeFontPadding="false"
                                app:layout_constraintStart_toEndOf="@+id/cardImage"
                                app:layout_constraintTop_toBottomOf="@+id/consHostelName" />

                        </androidx.cardview.widget.CardView>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/consRoomAvailability"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginHorizontal="@dimen/dp_10"
                        android:visibility="gone"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/consPrice1">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardAvailability"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardElevation="@dimen/dp_5"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/dp_20"
                            android:layout_marginStart="@dimen/dp_10"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/txtAvailability"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/check_room_availability"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp_14"
                                android:fontFamily="@font/roboto_bold"
                                android:maxLines="1"
                                android:layout_marginTop="@dimen/dp_5"
                                android:paddingVertical="@dimen/dp_8"
                                android:paddingHorizontal="@dimen/dp_15"
                                android:includeFontPadding="false"
                                app:layout_constraintStart_toEndOf="@+id/cardImage"
                                app:layout_constraintTop_toBottomOf="@+id/consHostelName" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardBookOffline1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardElevation="@dimen/dp_5"
                            app:cardBackgroundColor="@color/app_color"
                            app:cardCornerRadius="@dimen/dp_10"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_5"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/txtBookOffline1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/book_offline"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_14"
                                android:fontFamily="@font/roboto_bold"
                                android:maxLines="1"
                                android:paddingVertical="@dimen/dp_8"
                                android:paddingHorizontal="@dimen/dp_15"
                                android:includeFontPadding="false"
                                app:layout_constraintStart_toEndOf="@+id/cardImage"
                                app:layout_constraintTop_toBottomOf="@+id/consHostelName" />

                        </androidx.cardview.widget.CardView>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <ImageView
                        android:id="@+id/imgOffer"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_100"
                        android:src="@drawable/ic_whats_new"
                        android:layout_marginTop="@dimen/dp_20"
                        android:scaleType="fitXY"
                        android:visibility="gone"
                        android:layout_marginHorizontal="@dimen/dp_10"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/consRoomAvailability"/>

                    <TextView
                        android:id="@+id/txtCustomerReview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/customer_review"
                        android:textSize="@dimen/sp_15"
                        android:visibility="gone"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginStart="@dimen/dp_10"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imgOffer"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyReview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:visibility="gone"
                        android:background="@android:color/transparent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtCustomerReview"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.core.widget.NestedScrollView>

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:src="@drawable/ic_details_back"
            android:adjustViewBounds="true"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_7"
            android:padding="@dimen/dp_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/imgWishlist"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:src="@drawable/ic_wishlist"
            android:adjustViewBounds="true"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_7"
            android:padding="@dimen/dp_2"
            android:onClick="onClick"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/consPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/dp_10"
            android:background="@color/white"
            android:paddingHorizontal="@dimen/dp_10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardBookOnline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/dp_5"
                app:cardBackgroundColor="@color/app_color"
                app:cardCornerRadius="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:onClick="onClick"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/dp_10">

                    <TextView
                        android:id="@+id/txtBookOnline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/book_online"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14"
                        android:fontFamily="@font/roboto_bold"
